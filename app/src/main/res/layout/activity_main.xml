<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainActivityTextView"
        android:layout_width="302dp"
        android:layout_height="382dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.455" />

    <Button
        android:id="@+id/button1"
        android:layout_width="95dp"
        android:layout_height="49dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/mainActivityTextView"
        app:layout_constraintStart_toStartOf="@+id/mainActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/mainActivityTextView"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityTextView"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/mainActivityTextView"
        app:layout_constraintTop_toTopOf="@+id/mainActivityTextView"
        app:layout_constraintVertical_bias="0.229" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Help"
        app:layout_constraintBottom_toBottomOf="@+id/mainActivityTextView"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityTextView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bntLayout"
        android:layout_width="95dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:text="Layout"
        app:layout_constraintBottom_toBottomOf="@+id/mainActivityTextView"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityTextView"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="@+id/mainActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnFragment"
        android:layout_width="99dp"
        android:layout_height="51dp"
        android:layout_marginTop="20dp"
        android:onClick="GoToFragment"
        android:text="Fragment"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityTextView"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toEndOf="@+id/bntLayout"
        app:layout_constraintTop_toBottomOf="@+id/helpButton" />

    <Button
        android:id="@+id/btnMahasiswa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mahasiswa"
        android:onClick="GoToMahasiswa1"
        app:layout_constraintEnd_toEndOf="@+id/mainActivityTextView"
        app:layout_constraintStart_toStartOf="@+id/mainActivityTextView"
        app:layout_constraintTop_toBottomOf="@+id/bntLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>